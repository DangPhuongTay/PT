@model Hotel
@{
    var image = string.IsNullOrWhiteSpace(Model.Image)
            ? "/images/image_1.jpg"
            : $"{Model.Image}";
}
<article class="blog-entry mb-4">
    <div class="card">
        <div class="row g-0">
            <div class="col-md-4">
                <img style="max-height:300px;object-fit:cover;" src="@image"
                     class="card-img"

                     alt="@Model.Name" />
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title ">
                        
                        @Model.Name
                        
                    </h5>
                    <p class="card-text">
                        <small class="text-muted">
                            Loại:
                        </small>
                      
                        <span class="text-primary">
                            @Model.Type
                        </span>
                         <small class="text-muted">
                             Sao
                        </small>
                        <p></p>
                        <small class="text-muted">
                            Địa chỉ:
                        </small>
                        <span class="text-primary">
                           
                                @Model.Address
                           
                        </span>
                    </p>
                    
                    <div class="tag-list">
                         <small class="text-muted">
                            Số điện thoại:
                        </small>
                        <span class="text-primary">
                           
                                @Model.Phone
                           
                        </span>
                    </div>

                    <div class="text-end">
                        <a
                           class="btn btn-primary"
                           title="@Model.Name">
                            Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</article>